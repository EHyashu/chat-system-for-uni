# University RAG System Configuration

# LLM Provider: "openai" or "dummy" (for testing without API)
UNI_RAG_LLM_PROVIDER=openai

# OpenAI API Key (required if using OpenAI)
UNI_RAG_OPENAI_API_KEY=your_openai_api_key_here

# Model name (default: gpt-4o-mini)
UNI_RAG_LLM_MODEL_NAME=gpt-4o-mini

# Embedding model (default: sentence-transformers/all-MiniLM-L6-v2)
UNI_RAG_EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

# Retrieval settings
UNI_RAG_TOP_K=5
UNI_RAG_SIMILARITY_THRESHOLD=0.2

# RAG behavior
UNI_RAG_MAX_CONTEXT_CHARS=6000
